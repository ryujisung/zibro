<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable

            name="vm"

            type="com.example.zibro.ui.signup.SignUpViewModel" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_signUp2_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_begin="22dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_signUp2_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layout_constraintGuide_end="22dp" />

            <com.example.zibro.ui.header.NavigationHeader
                android:id="@+id/hd_signUp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="비밀번호를 입력해주세요"
                android:textColor="@color/text1"
                android:fontFamily="@font/suit_bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/line_signUp2_start"
                app:layout_constraintTop_toTopOf="@id/guideline1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2/5"
                android:textColor="@color/text2"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="@id/line_signUp2_end"/>

            <EditText
                android:id="@+id/edt_signUp2_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:text = "@={vm.password}"
                android:inputType="textPassword"
                android:layout_marginTop="30dp"
                android:padding="14dp"
                app:layout_constraintEnd_toEndOf="@id/line_signUp2_end"
                app:layout_constraintStart_toStartOf="@id/line_signUp2_start"
                app:layout_constraintTop_toBottomOf="@id/textView2"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/txt_sign2_eror"
                android:drawableStart="@drawable/error"
                android:text="비밀번호를 입력해주세요"
                android:visibility="invisible"
                android:drawablePadding="4dp"
                android:textColor="@color/error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/edt_signUp2_email"
                app:layout_constraintEnd_toEndOf="@id/line_signUp2_end"
                app:layout_constraintStart_toStartOf="@id/line_signUp2_start"/>


            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:layout_height="54dp"
                android:background="@drawable/button_round"
                android:text="다음"
                android:fontFamily="@font/suit_bold"
                android:textSize="16dp"
                android:letterSpacing="0.05"
                app:layout_constraintTop_toTopOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/line_signUp2_end"
                app:layout_constraintStart_toStartOf="@id/line_signUp2_start" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>