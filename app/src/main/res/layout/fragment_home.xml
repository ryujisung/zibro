<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="phrase"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment"
        android:padding="22dp">

        <ImageView
            android:id="@+id/title"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:src="@drawable/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ic_bell"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bell"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/small_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루도 힘내요!"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:src="@drawable/edt_background"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/small_title"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_doublequotes_i"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/box"
            app:layout_constraintStart_toStartOf="@id/box"
            app:layout_constraintEnd_toEndOf="@id/box"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_doublequotes_r"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="@id/box"
            app:layout_constraintStart_toStartOf="@id/box"
            app:layout_constraintEnd_toEndOf="@id/box"/>

        <TextView
            android:id="@+id/home_txt_phrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@={phrase}"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/box"
            app:layout_constraintStart_toStartOf="@id/box"
            app:layout_constraintEnd_toEndOf="@id/box"
            app:layout_constraintBottom_toBottomOf="@id/box" />

        <TextView
            android:id="@+id/small_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인기글"
            android:textSize="20sp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@id/box"
            app:layout_constraintStart_toStartOf="parent"/>

        <!--여기에 인기글 목록 추가하고 id 넣어서 아래 타이틀에 ttb 아이디 바꿔주라-->

        <TextView
            android:id="@+id/small_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상담하러 가기"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/small_title2"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/edt_counsel"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="@drawable/edt_background_main"
            android:hint="궁금한 내용을 입력하세요..."
            android:textSize="14sp"
            android:padding="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/small_title3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보내기"
            android:textSize="14dp"
            android:textColor="@color/main"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="@id/edt_counsel"
            app:layout_constraintBottom_toBottomOf="@id/edt_counsel"

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>